  outdir = './tmp'
  pmcell = 'si'

  nk1 = 8, nk2 = 8, nk3 = 8
  dft_band_min = 1,
  dft_band_max = 4,
  num_wann = 4
  lwannier = .true.

  dscell_fix = 'si-u040404-neutral-vacancy-fixed'
